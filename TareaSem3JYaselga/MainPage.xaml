<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TareaSem3JYaselga.MainPage">

    <StackLayout>
        <Frame BackgroundColor="White" Padding="24" CornerRadius="0">
            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"/>
        </Frame>

        <Frame BackgroundColor="#2196F3" Padding="12" CornerRadius="0">
            <Label Text="Seguimiento de Notas" HorizontalTextAlignment="Center" TextColor="White" FontSize="24"/>
        </Frame>

        <Entry x:Name="txtUsuario" Placeholder="Ingrese Usuario"/>
        <Entry x:Name="txtClave" Placeholder="Ingrese Contraseña" IsPassword="True"/>

        <Button x:Name="btnAbrirVentana"
                Text="Acceder"
                Clicked="btnAbrirVentana_Clicked"/>
    </StackLayout>

</ContentPage>
